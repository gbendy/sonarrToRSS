:root {
  color-scheme: light dark;

  --light-bg-color: #f5f7fa;
  --light-color: black;
  --light-pagination-active-color: #4CAF50;
  --light-pagination-hover-color: #ddd;
  --light-warning-color: orange;
  --light-error-color: red;
  --light-good-color: green;
  --light-config-tip-color: #909293;
  --light-box-shadow-color: rgba(0, 0, 0, 0.1);
  --light-overlay-border-color: #333;
  --light-anchor-hover-color: #555;
  --light-anchor-active-color: #888;

  --dark-bg-color: #1b1b1b;
  --dark-color: AliceBlue;
  --dark-pagination-active-color: #1C7F10;
  --dark-pagination-hover-color: #333;
  --dark-warning-color: #E3963E;
  --dark-error-color: crimson;
  --dark-good-color: green;
  --dark-config-tip-color: #939290;
  --dark-box-shadow-color: rgba(255, 255, 255, 0.1);
  --dark-overlay-border-color: #ddd;
  --dark-anchor-hover-color: #ccc;
  --dark-anchor-active-color: #999;
}

body {
  font-family: "Roboto", "open sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif;
  background-color: light-dark(var(--light-bg-color), var(--dark-bg-color));
  color: light-dark(var(--light-color), var(--dark-color));
}

a {
  color: light-dark(var(--light-color), var(--dark-color));
}

a:hover {
  color: light-dark(var(--light-anchor-hover-color), var(--dark-anchor-hover-color));
}

a:active {
  color: light-dark(var(--light-anchor-active-color), var(--dark-anchor-active-color));
}

span.warning {
  color: light-dark(var(--light-warning-color), var(--dark-warning-color));
  font-weight: bold;
  text-transform: capitalize;
}

span.error {
  color: light-dark(var(--light-error-color), var(--dark-error-color));
  font-weight: bold;
  text-transform: capitalize;
}

span.good {
  color: light-dark(var(--light-good-color), var(--dark-good-color));
  font-weight: bold;
  text-transform: capitalize;
}

.pointer {
  cursor: pointer;
}

.container {
  display:flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
}

.centreColumn {
  width: 90%;
  align-self: center;
}

heading {
  font-weight: bold;
  font-size: 1.3em;
}

events {
  display: flex;
  flex-direction: column;
}

events header {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-top: 16px;
}

events header>count{
  flex-grow: 1;
  font-size: 1.2em;
  font-weight: bold;  
  width:100%;
}

events header>sort {
  margin-left: 4px;
}

events header>pagesize {
   white-space: nowrap;
   margin-left: 4px;  
}

footer {
  display: flex;
  flex-direction: row;
  align-self: start;
}

footer>browse {
  flex-grow: 1;
  font-size: 1.2em;
  font-weight: bold;
  width:100%;
  padding-left: 20px;
}

footer>browse a {
  font-weight: normal;
}

nav {
  display: flex;
  flex-direction: row;
  align-self: center;
}

.hidden {
  visibility: hidden;
}

.overlay {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: light-dark(var(--dark-bg-color), var(--light-bg-color));
    opacity: .75;
    z-index: 9999999;
    display: flex;
    flex-direction: column;
    align-items: center;
}

#overlay message {
  color: light-dark(var(--light-color), var(--dark-color));
  background-color: light-dark(var(--light-bg-color), var(--dark-bg-color));
  display: flex;
  margin-top: 20px;
  padding: 8px 16px;
  border: 2px solid light-dark(var(--light-overlay-border-color), var(--dark-overlay-border-color));
  border-radius: 8px;
  font-weight: bold;
  font-size: 1.2em;
}

.pagination {
}

.pagination a {
  display: inline-block;
  width: 32px;
  height: 32px;
  margin-left: 4px;
  text-decoration: none;
  border-radius: 5px;
  text-align: center;
  line-height: 30px;
}

.pagination a.active {
  background-color: light-dark(var(--light-pagination-active-color), var(--dark-pagination-active-color));
  color: white;
  border-radius: 5px;
}

.pagination a:hover:not(.active, .skip) {
  background-color:  light-dark(var(--light-pagination-hover-color), var(--dark-pagination-hover-color));
}

.pagination a, .pagination a:visited, .pagination a:hover, .pagination a:active {
  color: inherit;
}

nav fill {
  flex-grow: 1;
  justify-content: center;
  display: flex;
}

nav prev {
}

nav next {
}

event {
  display: flex;
  flex-direction: row;
  
  box-shadow: 0 2px 5px light-dark(var(--light-box-shadow-color), var(--dark-box-shadow-color));
  margin-bottom: 16px;
  width: 100%;
  padding-bottom: 4px;
  padding-right: 4px;
  left: 0px;
}

.config event {
  margin-top: 16px;
}

.config episode {
  margin-bottom: 8px;
}

.config entry {
  font-size: 1.2em;
  margin-top: 4px;
  max-width: 650px;
}

.config event release entry {
  display: flex;
  margin-top: 8px;
}

.config event release entry .label {
  flex: 0 0 150px;
  display: flex;
  justify-content: flex-end;
  padding-top: 4px;
}

.config event release entry.tip {
  margin-left: 166px; /* input+label margin */
  margin-top: 2px;
  color: light-dark(var(--light-config-tip-color), var(--dark-config-tip-color));
}

.config input,tip,button {
  margin-left: 16px;
  padding: 6px 16px;
  flex: auto;
  width: 100%;
}

.config .checkboxWrapper {

}

.config span {
  text-transform: inherit;
}

.config [type='checkbox'] {
  flex-grow: 0;
  width: 20px;
  height: 20px;
}

.single event {
  margin-top: 16px;
}

event left {
  display: flex;
  margin: 0;
  padding-top: 0px;
  
  flex-direction: column;
  padding-left: 20px;
}

event data {
  display: flex;
  flex: 1;
  margin: 0;
  padding-top: 0px;
  
  flex-direction: column;
  padding-left: 20px;
}

event series {
  font-weight: bold;
  font-size: 1.2em;
}

event detail {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

event episode {
  font-weight: bold;
  padding-top: 0px;
}

event episode.noseries {
  font-size: 1.2em;
}

event release {
  display: flex;
  flex-direction: column;
  font-size: 0.8em;
  padding-top: 4px;
}

event release entry {
  display: block;
}

event release entry .label {
  font-weight: bold;
}

event time {
  font-size: 0.8em;
  bottom: 0px;
}

img {
  width: 100%;
  height: auto;
}

